		"humanmade/meta-tags": "*",
		"humanmade/orphan-command": "*",
		"humanmade/two-factor": "*",
		"humanmade/wordpress-importer": "dev-master",
		"humanmade/wp-seo": "*",
		"jazzsequence/address-book": "*",
		"jazzsequence/artists": "*",
		"jazzsequence/dashboard-changelog": "*",
		"jazzsequence/games-collector": "*",
		"jazzsequence/jz-222": "dev-main",
		"jazzsequence/recipe-box": "*",
		"jazzsequence/wp-show-tracker": "*",
		"johnbillion/extended-cpts": "*",
		"pantheon-systems/pantheon-content-publisher-for-wordpress": "1.2.5",
		"rhubarbgroup/object-cache-pro": "*",
		"wpackagist-plugin/akismet": "*",
		"wpackagist-plugin/altis-accelerate": "*",
		"wpackagist-plugin/amazon-s3-and-cloudfront": "*",
		"wpackagist-plugin/bv-pantheon-migration": "*",
		"wpackagist-plugin/glotpress": "*",
		"wpackagist-plugin/gutenberg": "*",
		"wpackagist-plugin/hello-ziggy": "*",
		"wpackagist-plugin/litespeed-cache": "*",
		"wpackagist-plugin/ninja-forms": "*",
		"wpackagist-plugin/organize-series": "*",
		"wpackagist-plugin/patchstack": "*",
		"wpackagist-plugin/plugins-garbage-collector": "*",
		"wpackagist-plugin/progress-bar": "*",
		"wpackagist-plugin/regenerate-thumbnails": "*",
		"wpackagist-plugin/storyftw": "*",
		"wpackagist-plugin/term-management-tools": "*",
		"wpackagist-plugin/wp-syntax": "*",
		"wpackagist-plugin/wpmovielibrary": "*",
		"wpackagist-theme/museum-core": "*",
		"wpackagist-theme/ryu": "*",
		"wpackagist-theme/twentynineteen": "*",
		"wpackagist-theme/twentyseventeen": "*",
		"wpackagist-theme/twentytwenty": "*",
		"wpackagist-theme/twentytwentyfive": "*",
		"wpackagist-theme/twentytwentyone": "*",
		"wpackagist-theme/twentytwentythree": "*",
		"wpackagist-theme/twentytwentytwo": "*"
	},
	"replace":{
		"johnpbloch/wordpress": "*"
	},
	"extra": {
		"installer-paths": {
			"wp-content/mu-plugins/{$name}": [
				"type:wordpress-muplugin",
				"jazzsequence/dashboard-changelog",
				"cmb2/cmb2"
			],
			"wp-content/plugins/{$name}": ["type:wordpress-plugin"],
			"wp-content/themes/{$name}": ["type:wordpress-theme"]
		}
	},
	"require-dev": {
        "johnbillion/wp-crontrol": "^1.16",
        "johnbillion/query-monitor": "*"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"johnpbloch/wordpress-core-installer": true,
			"altis/cms-installer": true
		},
		"optimize-autoloader": true,
		"sort-packages": true,
		"platform": {
			"php": "8.2"
		}
	},
	"scripts": {
		"pre-update-cmd": [
			"if [ -f wp-config.php ]; then cp wp-config.php wp-config.php.bak; fi",
			"if [ -f index.php ]; then cp index.php index.php.tmp; fi"
		],
		"post-update-cmd": [
			"if [ -f wp-config.php.bak ]; then mv wp-config.php.bak wp-config.php; fi",
			"if [ -f index.php.tmp ]; then mv index.php.tmp index.php; fi"
		],
		"pre-install-cmd": "@pre-update-cmd",
		"post-install-cmd": "@post-update-cmd",
		"shellcheck": [
			"shellcheck bin/*.sh"
		],
		"dry-run-release": "bash bin/dry-run-release.sh"
	}
}
